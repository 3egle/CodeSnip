{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "lib": ["es6"],
        "allowJs": true,
        "outDir": "dist",
        "rootDir": "./",
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "typeRoots": ["./node_module/@types", "./src/types"],
        "declaration": true,
        "emitDeclarationOnly":true,
        "isolatedModules": true,
        "skipLibCheck": true
    }
}
